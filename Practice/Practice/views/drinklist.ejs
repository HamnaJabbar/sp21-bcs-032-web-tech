<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drink List</title>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>

<h1>Drink List</h1>
<ul id="drink-list"></ul>

<script>
  $(document).ready(function() {
    // Fetch and display drinks when the page is loaded
    fetchDrinks();

    // Function to fetch and display drinks
    function fetchDrinks() {
      $.get("/api/drinks", function(data) {
        // Clear the existing list
        $("#drink-list").empty();

        // Append each drink to the list
        data.forEach(function(drink) {
          $("#drink-list").append(`<li>${drink.name} - Sugar: ${drink.sugar}, Quantity: ${drink.quantity}</li>`);
        });
      });
    }
  });
</script>

</body>
</html>
